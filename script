let songs = [
  "All Too Well",
  "Cruel Summer",
  "August",
  "Style",
  "Blank Space",
  "Enchanted",
  "Getaway Car",
  "Clean",
  "Love Story",
  "Cardigan"
];

// Shuffle songs
songs.sort(() => Math.random() - 0.5);

let current = [];

function nextRound() {
  if (songs.length === 1) {
    document.getElementById("game").style.display = "none";
    document.getElementById("result").style.display = "block";
    document.getElementById("winner").innerText = songs[0];
    return;
  }

  current = [songs.shift(), songs.shift()];
  document.getElementById("song1").innerText = current[0];
  document.getElementById("song2").innerText = current[1];
}

function pick(choice) {
  songs.push(current[choice]);
  nextRound();
}

nextRound();
